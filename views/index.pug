extends layout

block content
  .row
    h2.sub-header Overview
    .table-responsive
      table.table.table-striped
        thead
          tr
            th 日期
            th 讀經進度
            th 今日心得
            th 刪除
            
        tbody
          each val in data
            tr
              -var date=new Date(val.date)
              td= date.getFullYear() + '/' + (date.getMonth()+1) + '/' + date.getDate()
              td= val.start+'~'+val.end
              - var content=val.content.replace(/\n/g, '<br>')
              td!= content
              td 
                button.btn.btn-danger(type='button') Delete